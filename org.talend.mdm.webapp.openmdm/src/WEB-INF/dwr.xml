<?xml version="1.0" encoding="UTF-8"?>
<dwr>
    <allow>

        <create creator="new" javascript="ActionsInterface">
            <param name="class" value="com.amalto.webapp.v3.xtentismdm.dwr.ActionsDWR"/>
            <auth method="getClusters" role="authenticated"/>
            <auth method="getModels" role="authenticated"/>
            <auth method="getCluster" role="authenticated"/>
            <auth method="getModel" role="authenticated"/>
            <auth method="setClusterAndModel" role="authenticated"/>
        </create>
        
        <create creator="new" javascript="LoginInterface">
            <param name="class" value="com.amalto.webapp.v3.xtentismdm.dwr.LoginDWR"/>
        </create>
        
        <convert converter="bean" match="com.amalto.webapp.core.util.XtentisWebappException"/>
        <convert converter="bean" match="java.rmi.RemoteException"/>
        <convert converter="bean" match="java.lang.StackTraceElement"/>
        
    </allow>

</dwr>
